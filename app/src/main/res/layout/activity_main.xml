<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_clock_circle"
                android:src="@drawable/clock_circle"
                android:layout_width="181dp"
                android:layout_height="181dp"
                android:layout_marginTop="202dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/iv_clock_hand_shadow"
                android:src="@drawable/clock_hand_shadow"
                android:layout_width="182dp"
                android:layout_height="182dp"
                android:layout_marginTop="202dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/iv_frame"
                android:src="@drawable/frame"
                android:layout_width="255dp"
                android:layout_height="334.62dp"
                android:layout_marginTop="48dp"
                android:layout_gravity="center_horizontal" />

        </FrameLayout>

        <Chronometer
            android:id="@+id/cmtr_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="36dp"
            android:fontFamily="@font/bebasneue_regular"
            android:textSize="64sp"
            android:textColor="@color/white"
            android:letterSpacing="0.04" />

        <Button
            android:id="@+id/btn_mulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/custom_button_red"
            app:backgroundTint="@null"
            android:text="@string/mulai"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_jeda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="32dp"
            android:paddingVertical="8dp"
            android:background="@drawable/custom_button_yellow"
            app:backgroundTint="@null"
            android:text="@string/jeda"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/unisbank_black"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginHorizontal="32dp"
            android:paddingVertical="8dp"
            android:background="@drawable/custom_button_secondary"
            app:backgroundTint="@null"
            android:text="@string/reset"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>